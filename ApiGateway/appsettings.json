{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
 "Ocelot": {
    "ReRoutes": [
      {
        "DownstreamPathTemplate": "/CDN/Images/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7016
          }
        ],
        "UpstreamPathTemplate": "/API/Images/{everything}",
        "UpstreamHttpMethod": [ "POST", "PUT", "GET" ]
      }


    ],
    "GlobalConfiguration": {
      "BaseUrl": "https://localhost:7123"
    }
  }

}
