{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "[yyyy-MM-ddTHH:mm:ss.fffzzz] ",
        "UseUtcTimestamp": false
      }
    }
  },
  "Sqlite": {
    "ConnectionStrings": {
      "YomikazeIdentity": "Data Source=yomikaze.identity.db",
      "Yomikaze": "Data Source=yomikaze.db"
    }
  },
  "Postgres": {
    "ConnectionStrings": {
      "YomikazeIdentity" : "Server=127.0.0.1;Port=5432;User ID=postgres;Database=yomikaze.identity",
      "Yomikaze" : "Server=127.0.0.1;Port=5432;User ID=postgres;Database=yomikaze"
    }
  },
  "SqlServer": {
    "ConnectionStrings": {
      "YomikazeIdentity" : "Server=.;Trusted_Connection=True;TrustServerCertificate=True;Database=yomikaze.identity",
      "Yomikaze" : "Server=.;Trusted_Connection=True;TrustServerCertificate=True;Database=yomikaze"
    }
  }
}
