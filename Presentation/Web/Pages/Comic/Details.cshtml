@page "/Comic/{id:int}"
@model Web.Pages.Comic.Details

@{
    Layout = "_Layout";
}

<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('comic', () => ({
            id: @Model.Id,
            init() {
                console.log('Comic details page loaded');
            },
            
        }));
    });
</script>

<div class="card card-side bg-base-100" x-data="comic">
    <figure><img src="" class="rounded-lg skeleton w-full h-52" alt="Movie" /></figure>
    <div class="card-body">
        <h2 class="card-title">Thiên Quan Tứ Phúc</h2>
        <table class="justify-start">
            <tr x-data="{ Author: 'Đang cập nhật' }">
                <td><i class="fa-solid fa-user me-6"></i>Author</td>
                <td x-text="Author"></td>
            </tr>
            <tr x-data="{ Condition: 'Đang cập nhật' }">
                <td><i class="fa-solid fa-wifi me-4"></i>Condition</td>
                <td x-text="Condition"></td>
            </tr>
            <tr x-data="{ Likes: 'Đang cập nhật' }">
                <td><i class="fa-solid fa-thumbs-up me-5"></i>Likes</td>
                <td x-text="Likes"></td>
            </tr>
            <tr x-data="{ Followers: 'Đang cập nhật' }">
                <td><i class="fa-solid fa-heart me-5"></i>Followers</td>
                <td x-text="Followers"></td>
            </tr>
            <tr x-data="{ Views: 'Đang cập nhật' }">
                <td><i class="fa-solid fa-eye me-5"></i>Views</td>
                <td x-text="Views"></td>
            </tr>
        </table>
        <div class="card-actions justify-start mt-5">
