@{
    ViewData["Title"] = "Home Page";
}

    <h2 class="text-center mt-5 text-warning">Edit Profile</h2>
    <div class="container mt-2 pt-5">
        <div class="row ">
            <div class="col-12 col-sm-6 col-md-4 m-auto rounded py-3 bg-secondary">
                <form action="#">
                    <div class="row text-center">
                        <div class="col-6 mt-2">
                            <input type="text" name="" id="" class="form-control mt-4" placeholder="Full Name">
                        </div>
                        <div class="col-3 mt-4 justify-content-center align-content-center">
                            <input class="form-check-input justify-content-center" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                Male
                            </label>
                        </div>
                        <div class="col-3 mt-4 justify-content-center">
                            <input class="form-check-input justify-content-center" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                Female
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="text" name="" id="" class="form-control mt-4" placeholder="Email">
                        </div>
                        <div class="col-6">
                            <input type="text" name="" id="" class="form-control mt-4 " placeholder="Password">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input type="text" name="" id="" class="form-control mt-4 " placeholder="Phone">
                        </div>
                        <div class="col-6">
                            <input type="text" name="" id="" class="form-control mt-4 " placeholder="Date of Birth">
                        </div>
                    </div>
                    <div class="row py-3 mx-3">
                        <div class="col-8">
                            <button class="btn btn-warning text-light mx-2" type="button">Edit Profile</button>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-warning text-light" type="button">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

