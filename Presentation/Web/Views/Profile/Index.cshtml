@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-2 pt-5">
    <div class="row ">
        <div class="col-12 col-sm-6 col-md-4 m-auto rounded bg-secondary" >
            <div class="d-sm-flex justify-content-md-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="82" height="82" fill="currentColor" class="bi bi-person-circle my-3 mx-auto" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg>
            </div>
            <p class=" text-center fs-5">ADMIN</p>
            <form action="#">
                <p class="px-5">Genres:</p>
                <p class="px-5">Date of Birth:</p>
                <p class="px-5">Phone:</p>
                <p class="px-5 mb-4">Email:</p>
                <div class="text-center mb-4">
                    <button class="btn me-12 col-4 mb-4 text-light btn-warning" type="button">Edit Profile</button>
                    <div class="text justify-content-md-end">
                        <label for="">Remembered your password?<a href="">Sign In</a></label>
                        <label for="">Don't have an account?<a href="">Sign Up</a></label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
